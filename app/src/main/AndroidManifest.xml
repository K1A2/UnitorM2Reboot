<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uni.unitor.unitorm2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.uni.unitor.unitorm2.layout.SplashActivity" android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.uni.unitor.unitorm2.layout.MainActivity" android:screenOrientation="sensorLandscape"/>
        <activity android:name="com.uni.unitor.unitorm2.layout.TabHostActivity" android:screenOrientation="sensorLandscape" android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>