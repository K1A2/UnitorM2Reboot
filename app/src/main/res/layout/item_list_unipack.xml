<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:layout_marginBottom="2dp"
    app:cardCornerRadius="3dp" app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ddddddddddddddddd"
            android:id="@+id/list_unipack_title"
            android:textSize="15dp"
            android:textColor="@color/title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ddddddddddddddddd"
                android:textSize="10dp"
                android:textColor="@color/sub"
                android:layout_marginTop="7dp"
                android:id="@+id/list_unipack_producer"
                android:layout_marginLeft="5dp"
                android:gravity="bottom|left"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ddddddddddddddddd"
                android:textColor="@color/sub"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:id="@+id/list_unipack_path"
                android:textSize="10dp"
                android:gravity="bottom|right"
                android:layout_weight="2"/>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="0sp"
            android:id="@+id/list_unipack_chain"/>

    </LinearLayout>

</android.support.v7.widget.CardView>