<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:layout_marginBottom="2dp"
    app:cardCornerRadius="3dp" app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="5dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:id="@+id/FragDial_file_Image_select"
            android:layout_marginRight="3dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="22dp"
            android:text="dddddddd"
            android:id="@+id/FragDial_file_name_select"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="0sp"
            android:text="ddddddd"
            android:id="@+id/FragDial_file_path_select"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v7.widget.CardView>