<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textColor="@color/title"
        android:textSize="20dp"
        android:id="@+id/dialog_delete_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub"
        android:textColor="@color/title"
        android:textSize="13dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dialog_delete_title"
        android:id="@+id/dialog_delete_sub"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_below="@id/dialog_delete_sub">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:background="@null"
            android:textColor="@color/title"
            android:id="@+id/button_delete_cancle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:textColor="@color/text_delete"
            android:id="@+id/button_delete_ok"/>

    </LinearLayout>

</RelativeLayout>